@model AdWebApp.Models.AdvertViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<style>
    
     
</style>

<div class="container">
    <hr/>
    <div class="form-horizontal">

        <div class="form-group row">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title, null)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @class = "form-control ad-textarea", @readonly = true })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ClientProfile.Name, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.ActionLink(Model.ClientProfile.Name, "Details", "Account", new { id = Model.ClientProfile.Id }, null)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary pull-right" })
            </div>
        </div>

    </div>
</div>